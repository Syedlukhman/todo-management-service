{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "cors"]
  },
  "include": ["src/**/*.ts"],
  "files": ["./src/types.d.ts"]
}
